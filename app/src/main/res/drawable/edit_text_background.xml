<?xml version="1.0" encoding="utf-8"?>
    <shape xmlns:android="http://schemas.android.com/apk/res/android"
        android:shape="rectangle">

        <!-- ব্যাকগ্রাউন্ড রঙ -->
        <solid android:color="#FFFFFF" />

        <!-- বর্ডার -->
        <stroke
            android:width="1dp"
            android:color="#CCCCCC" />

        <!-- কোণের বৃত্তাকারতা -->
        <corners android:radius="8dp" />

        <!-- অভ্যন্তরীণ প্যাডিং -->
        <padding
            android:left="12dp"
            android:top="12dp"
            android:right="12dp"
            android:bottom="12dp" />
    </shape>